<odoo>
    <data>
        <record id="view_op_student_progression_inherited_form" model="ir.ui.view">
            <field name="name">op.student.progression.inherited.form</field>
            <field name="model">op.student.progression</field>
            <field name="inherit_id" ref="openeducat_student_progress_enterprise.view_student_progress_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Transcript">
                        <button string="Get Transcript" type="action" name="%(action_report_transcript)d" class="oe_highlight"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
