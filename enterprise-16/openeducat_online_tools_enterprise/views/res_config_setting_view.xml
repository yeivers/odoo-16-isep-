<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form_online_meeting" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.online.meeting</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="openeducat_core.res_config_settings_view_form_core"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='openeducat_core_apps']" position="before">
                <h2>OpenEduCat Online Tools Integration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         title="">
                        <div class="o_setting_left_pane">
                            <field name="automatic_email"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="automatic_email"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
