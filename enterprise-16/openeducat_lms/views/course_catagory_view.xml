<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_course_category_tree" model="ir.ui.view">
            <field name="name">op.course.category.tree</field>
            <field name="model">op.course.category</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Course category">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="desc"/>
                    <field name="icon" optional="hide"/>
                    <field name="parent_id" optional="hide"/>
                    <field name="active" widget="boolean_toggle" optional="hide"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="view_course_category_form" model="ir.ui.view">
            <field name="name">op.course.category.form</field>
            <field name="model">op.course.category</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Course Category">
                    <header/>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group col="4">
                            <field name="name" required="1"/>
                            <field name="code"/>
                            <field name="icon" placeholder="E.g fa fa-home"/>
                            <field name="parent_id"/>
                            <field name="company_id" groups="base.group_multi_company" optional="show"/>
                        </group>
                        <label name="Description" for="desc"/>
                        <field name="desc" placeholder="Description..." />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_course_category_search" model="ir.ui.view">
            <field name="name">op.course.category.search</field>
            <field name="model">op.course.category</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Course Category">
                    <field name="name" select="True"/>
                    <field name="code"/>
                    <filter string="Archived" name="inactive"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_course_category_view">
            <field name="name">Course Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.course.category</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_course_category_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_course_category_view_form">
            <field name="act_window_id" ref="act_open_course_category_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_course_category_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_course_category_view_tree">
            <field name="act_window_id" ref="act_open_course_category_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_course_category_tree"/>
        </record>
    </data>
</odoo>
